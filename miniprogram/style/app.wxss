.row-center {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.row-around {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.row-between {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.row-evenly {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.row-start {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.column-between {
  display: flex;
  flex-direction: column;
  align-items: space-between;
  justify-content: space-between;
}

.column-center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.column-evenly {
  display: flex;
  flex-direction: column;
}
